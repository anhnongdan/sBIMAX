<div class="widget qos-widget" id="overviewWidgetHttpCode">
	<div class="widgetTop">
		<h3 class="widgetName">
			<span>{{ 'QoS_HttpCode'|translate }}</span>
		</h3>
	</div>
	<div class="widgetContent ng-scope">
		<div class='overview-widget-httpcode-widget' data-refreshAfterXSecs="{{ bw_refreshAfterXSecs }}" data-last-minutes="{{ bw_lastMinutes }}" data-translations="{{ bw_translations|json_encode }}">
			<div class='overview-widget-httpcode-counter' title="{{ httpcode }}{{ 'QoS_HttpCode_Message'|translate(bw_lastMinutes) | raw }}">
				<div>{{ httpcode }}</div>
			</div>
			<br/>

			<div class='overview-widget-httpcode-elaboration'>
				{{ 'QoS_HttpCode_Message'|translate(bw_lastMinutes) | raw }}
			</div>
		</div>
		<script type="text/javascript">$(document).ready(function () {require('piwik/QoS').initOverviewHttpCodeWidget();});</script>
	</div>
</div>